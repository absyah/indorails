    <%= stylesheet_link_tag "main", media: "all" %>

	<%= csrf_meta_tags %>
</head>
<body>

<%= yield %>

<script>
$( document ).ready(function() {
    $(window).scroll(function() {
        var 
            sticky = $('#top-bar'),
            scroll = $(window).scrollTop();

        if (scroll >= 100)  {
            sticky.addClass('fixed');
            $('#login-form').css('margin-top', '65px');
            $('#top-bar').css('padding', '0');
        }
        else {
            sticky.removeClass('fixed');
            $('#login-form').css('margin-top', '75px');
            $('#top-bar').css('padding', '10px 0');
        } 
            
    });

    //login hover
    $('#login').click(function()
    {
        $('#login-form').css('display', 'block');
    });

    $('#login-form').find('.close').click(function()
    {
        $('#login-form').css('display', 'none');
    });

    //icon hover
    $('.icon-link').mouseover(function()
    {
        $(this).find('.icon-hover').css('display', 'block');
        $(this).find('.icon-hover').css('color', '#888');
    });

    $('.icon-link').mouseout(function()
    {
        $(this).find('.icon-hover').css('display', 'none');
    });

    //slideshow
    $.fn.changeSlide = function (curNumber) {
        curNumber++;

        if(curNumber > 3){
            curNumber = 1;
        }
        $(".slide-img").fadeIn();
        $('.slide-img').css('background-image' , 'url(/slideshow/slide'+curNumber+'.jpg)');
        setTimeout(function(){$(".slide-img").fadeOut("fast")}, 9800);
        setTimeout(function(){$.fn.changeSlide(curNumber)}, 10000);
         
    }
    
    $.fn.changeSlide(0);

    //slide content
    $('.prev').css({'border-color' : '#ccc', 'color' : '#fff', 'background-color' : '#ccc'});
    $('.slide').attr('data-slide', $('.slide').find('li').length);
    var theWidth = 1170;
    var position = parseInt($('.slide').attr('data-position'));
    if(($('.slide').find('li').length)==1)
    {
        $('.slide-btn').css({'border-color' : '#ccc', 'color' : '#fff', 'background-color' : '#ccc'});
    }
    else {
        if($('.slide').attr('data-position')>=$('.slide').attr('data-slide')){
             $('.slide-btn').css({'border-color' : '#ccc', 'color' : '#fff', 'background-color' : '#ccc'});
        }
        else {
            //next
            $('.next').click(function(){
                if(position<(($('.slide').find('li').length)-1))
                {
                    $('.slide-btn').css({'border-color' : '', 'color' : '', 'background-color' : 'transparent'});
                    var intIndex = position - 1;
                    $('.slide').find('ul').animate({
                        "margin-left": (-(position + 1) * theWidth)             
                    }, 1000);    
                    $('.slide').attr('data-position', position + 1);
                    position = position + 1;
                    if(position==(($('.slide').find('li').length)-1))
                    {
                        $(this).css({'border-color' : '#ccc', 'color' : '#fff', 'background-color' : '#ccc'});
                    }
                }
            });
                
            //prev
            $('.prev').click(function(){
                if(position>=1)
                {
                    $('.slide-btn').css({'border-color' : '', 'color' : '', 'background-color' : 'transparent'});
                    var intIndex = position;
                    $('.slide').find('ul').animate({
                        "margin-left": (-(position - 1) * theWidth)       
                    }, 1000);    
                    $('.slide').attr('data-position', position - 1);
                    position = position - 1;
                    if(position==0)
                        {
                        $(this).css({'border-color' : '#ccc', 'color' : '#fff', 'background-color' : '#ccc'});
                    }
                }
            });
        }
    }
});




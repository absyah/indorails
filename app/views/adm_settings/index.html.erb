<h1 class="mt0 mb30">General Settings</h1>

<div class="form-horizontal">
	<%= form_for(@setting, url: "/adm/settings/update") do |fg| %>

		<!-- barisan flash error -->
		<% if @setting.errors.any? %>
			<div id="errors" class="alert alert-danger">
				<h2 class="mt5 mb5"><%= pluralize(@setting.errors.count, "error") %> prevent this post from saving</h2>
				<ul>
					<% @setting.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group">
			<label class="col-lg-3">Site Title</label>	
			<div class="col-lg-9">
				<%= fg.text_field :site_title, html_options={ "class" => "form-control" } %>		
			</div>
		</div>

		<div class="form-group">
			<label class="col-lg-3">Site Description</label>	
			<div class="col-lg-9">
				<%= fg.text_field :site_description, html_options={ "class" => "form-control" } %>		
			</div>
		</div>

		<div class="form-group">
			<label class="col-lg-3">Domain</label>	
			<div class="col-lg-9">
				<%= fg.text_field :site_domain, html_options={ "class" => "form-control" } %>		
			</div>
		</div>

		<div class="form-group">
			<div class="col-lg-12">
				<input type="submit" class="btn btn-primary" value="Save Changes">
			</div>
		</div>
		
	<% end %>
</div>
<script type="text/javascript">
	$(document).ready(function(){
		$('#pill_settings').addClass('active');	
	});
</script>
<%= render 'widget/head_top' %>
<section class="container back-white pl0 pr0">
  <%= render "widget/nav" %>

  <!-- breadcrumb -->
  <div class="col-lg-12">
    <ol class="breadcrumb">
      <li>
        <a href="/"><i class="fa fa-angle-double-right"></i> Home</a>
      </li>
      <li class="active">
        <% if @articles.size > 0 %>
          <a><%= @articles.first.cat_name %></a>
        <% end %>
      </li>
    </ol>
  </div>
  
  <!-- content -->
  <div class="col-lg-12">

    <% if @articles.size > 0 %>
      <%= render "articles", :locals => { @articles => @articles } %>  
    <% else %>
      Belum ada artikel 
    <% end %>
  </div>
  
</section>

<%= render "widget/footer" %>
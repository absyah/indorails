<h1 class="mt0 mb30">Edit Profil</h1>

<%= form_for(@userext, url: "/adm/akun/update", html: {"class" => "form-horizontal"}) do |f| %>

  <% if @userext.errors.any? %>
    <div id="errors" class="alert alert-danger">
      <h2 class="mt5 mb5"><%= pluralize(@userext.errors.count, "error") %> prevent this post from saving</h2>
      <ul>
        <% @userext.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- barisan content form -->
  <div class="col-lg-12 pl0">

    <div class="form-group mb10">
      <%= f.label :photo, "Photo" %>
      <%= f.text_field :photo, html_options={ "class" => "form-control", "disabled" => "disabled", "readonly" => "readonly", "placeholder" => "Sedang dalam pengembangan" } %>
    </div>

    <div class="form-group mb10">
      <%= f.label :description, "Deskripsi Lengkap" %>
      <%= f.text_area :description, html_options={ "class" => "form-control", "placeholder" => "Tulis deskripsi lengkap tentang diri Anda disini" } %>
    </div>

    <div class="form-group mb10">
      <%= f.label :description_short, "Deskripsi Singkat" %>
      <%= f.text_area :description_short, html_options={ "class" => "form-control", "placeholder" => "Tulis deskripsi singkat tentang diri Anda disini" } %>
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-primary" value="Save">
    </div>	

  </div>	


<% end %>
<h1 class="mt0 mb30">Edit Media</h1>

<div class="form-horizontal">
	<%= form_for @media, url: "/adm/media/update/#{@media.id}?page=#{@page}", :html => {:multipart => true} do |f| %>
		
		<% if @media.errors.any? %>
			<div id="errors" class="alert alert-danger">
				<h2 class="mt5 mb5"><%= pluralize(@media.errors.count, "error") %> prevent this post from saving</h2>
				<ul>
					<% @media.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group">
			<%= f.label :med_title, 'Title', html_options={ "class" => "col-lg-3" } %>
			<div class="col-lg-9">
				<%= f.text_field :med_title, html_options={ "class" => "form-control" } %>	
			</div>
		</div>

		<div class="form-group">
			<%= f.label :med_caption, 'Caption', html_options={ "class" => "col-lg-3" } %>
			<div class="col-lg-9">
				<%= f.text_field :med_caption, html_options={ "class" => "form-control" } %>	
			</div>
		</div>		

		<div class="form-group">
			<%= f.label :med_alt, 'Alt Text', html_options={ "class" => "col-lg-3" } %>
			<div class="col-lg-9">
				<%= f.text_field :med_alt, html_options={ "class" => "form-control" } %>	
			</div>
		</div>

		<div class="form-group">
			<%= f.label :med_description, 'Description', html_options={ "class" => "col-lg-3" } %>
			<div class="col-lg-9">
				<%= f.text_area :med_description, html_options={ "class" => "form-control" } %>	
			</div>
		</div>

		<div class="form-group">
			<%= f.label :gallery, 'Gallery', html_options={ "class" => "col-lg-3" } %>
			<div class="col-lg-9">
				<%= f.select :gallery, options_for_select([['Ya','yes'],['Tidak','no']],@media.gallery), html_options={ :class => "form-control" }  %>	
			</div>
		</div>

		<div class="form-group">
			<%= f.label :med_storage_name, 'File', html_options={ "class" => "col-lg-3" } %>
			<div class="col-lg-9">
				<%= f.file_field :med_storage_name, html_options={ "class" => "form-control" } %>	
			</div>
		</div>

		<div class="form-group">
			<div class="col-lg-12">
				<input type="submit" value="Edit Media" class="btn btn-primary">
			</div>
		</div>

	<% end %>
</div>


<script>$('#pill_media').addClass('active');</script>
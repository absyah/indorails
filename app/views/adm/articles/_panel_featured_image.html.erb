<div class="panel panel-default">
  <div class="panel-heading">
    Featured Image
  </div>
  <div class="panel-body">
    <div id="feat_img_display">
      <% case %>
      <% when @article.feat_img == "" %>
        <%= image_tag('thumb/default.png', style: "width:100%;") %>
        <% @value_feat = 'default.png' %>
      <% when !@article.feat_img %>
        <%= image_tag('thumb/default.png', style: "width:100%;") %>
        <% @value_feat = 'default.png' %>
      <% else %>
        <%= image_tag('thumb/'+@article.feat_img, style: "width:100%;") %>
        <% @value_feat = @article.feat_img %>
      <% end %>
    </div>

    <div id="feat_img">
      <a href="#" onclick="adm_articles.show_media_win();">Set Featured Image</a>
    </div>

    <input type="hidden" name="article[feat_img]" id="article_feat_img_input" value="<%= @value_feat %>">

  </div>
</div>

<div id="media_win"></div>